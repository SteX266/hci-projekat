<Page x:Class="ZeleznicaSrbije.ReservationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZeleznicaSrbije" xmlns:custom="clr-namespace:ModalControl;assembly=ModalControl"
      mc:Ignorable="d" 
      d:DesignHeight="430" d:DesignWidth="750"
      Title="ReservationPage">
    <Border Background="#272537">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="13*"/>
            </Grid.RowDefinitions>
            <ComboBox Margin="30, 40, 30, 10" Grid.Column="1" Name="OriginPicker" IsEditable="True" IsReadOnly="False" Text="Polazište" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            </ComboBox>
            <ComboBox Margin="30, 40, 30, 10" Grid.Column="2" Name="DestinationPicker" IsEditable="True" IsReadOnly="False" Text="Odredište" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            </ComboBox>
            <Button Margin="30, 40, 30, 10" Content="Pretraži" Grid.Column="4" Click="Button_Click">
            </Button>


            <DataGrid Name="ridesTable" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" Margin="20, 20" >
                
            </DataGrid>
            <custom:Modal  Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="2" Name="ReservationModal">
                <custom:Modal.Background>
                    <SolidColorBrush Color="Black" Opacity="0.5"/>
                </custom:Modal.Background>
                <Border Background="WhiteSmoke" Height="300" Width="250" CornerRadius="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        
                        <DatePicker Margin="10, 10"
                                    Grid.Row="0" Grid.Column="0"
                                    Grid.ColumnSpan="2" 
                                    Name="DatePicker"
                                    FontSize="18"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"/>

                        <ComboBox 
                            Margin="10, 10"
                            Grid.Column="0" Grid.Row="1"
                            Grid.ColumnSpan="2" 
                            Name="ResOriginPicker" 
                            IsEditable="True" 
                            IsReadOnly="True" 
                            Text="Polaziste"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center"
                            FontSize="18"/>

                        <ComboBox 
                            Margin="10, 10"
                            Grid.Column="0" Grid.Row="2"
                            Grid.ColumnSpan="2" 
                            Name="ResDestinationPicker" 
                            IsEditable="True" 
                            IsReadOnly="True" 
                            Text="Polaziste"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center"
                            FontSize="18"/>

                        <Button Content="Rezervisi"
                                Grid.Column="0" Grid.Row="3"
                                Margin="20, 10" FontSize="18"
                                Click="MakeReservation"/>

                        <Button 
                            Content="Otkazi"
                            Grid.Column="1"  Grid.Row="3"
                            Margin="20, 10" FontSize="18"
                            Click="CloseReservationModal"/>
                    </Grid>
                </Border>
                    
            </custom:Modal>
        </Grid>
    </Border>
</Page>
