<Page x:Class="ZeleznicaSrbije.TimetablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZeleznicaSrbije"
      mc:Ignorable="d" 
      d:DesignHeight="430" d:DesignWidth="750"
      Title="TimetablePage">

    <Border Background="#E8EBF7">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="13*"/>
            </Grid.RowDefinitions>
            <ComboBox Margin="30, 40, 30, 10" Grid.Column="1" Name="StationPicker" IsEditable="True" IsReadOnly="False" Text="Mesto" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            </ComboBox>
            <ComboBox Margin="30, 40, 30, 10" Grid.Column="2" Name="TypePicker" IsEditable="True" IsReadOnly="False" Text="Polasci" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            </ComboBox>
       
            <Button Style="{StaticResource ButtonStyle}" Margin="30, 40, 30, 10" Content="Prikaži" Grid.Column="4" Click="Button_Click">
            </Button>
            <DataGrid Style="{StaticResource DataGridStyle}" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" Margin="20, 20" Name="Timetables" AutoGenerateColumns="False" >


                <DataGrid.Columns >

                    <DataGridTextColumn Binding="{Binding Polaziste}" Header="Polazište"  Width="1.5*"/>
                    <DataGridTextColumn Binding="{Binding Odrediste}" Header="Odredište"  Width="1.5*"/>
                    <DataGridTextColumn Binding="{Binding PolazakString}" Header="Polazak"  Width="*"/>
                    <DataGridTextColumn Binding="{Binding DolazakString}" Header="Dolazak"  Width="*"/>
                    <DataGridTextColumn Binding="{Binding TrajanjeString}" Header="Trajanje"  Width="*"/>
                    <DataGridTextColumn Binding="{Binding Cena}" Header="Cena"  Width="0.7*"/>
                    <DataGridTextColumn Binding="{Binding Linija}" Header="Linija"  Width="0.7*"/>


                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</Page>
